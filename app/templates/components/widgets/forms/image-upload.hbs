<label>{{label}}</label>
{{#if selectedImage}}
  <div class="ui card">
    {{#if uploadingImage}}
      <div class="ui active dimmer">
        <div class="ui text loader">Image Uploading</div>
      </div>
    {{/if}}
    <div class="image">
      <img src="{{selectedImage}}">
    </div>
    <div class="ui bottom attached mini buttons">
      {{#if allowReCrop}}
        <div class="ui teal button" {{action 'reCrop'}}>
          <i class="trash icon"></i>
          Re-crop
        </div>
      {{/if}}
      <div class="ui red button" {{action 'removeSelection'}}>
        <i class="trash icon"></i>
        {{if needsConfirmation 'Delete' 'Confirm Delete'}}
      </div>
    </div>
  </div>
{{else}}
  {{input type='file'
          id=inputIdGenerated
          class='styled input' name=name change=(action 'fileSelected')}}
  <label for="{{inputIdGenerated}}">
    <div class="ui center aligned piled upload segment text muted">
      <i class="big {{icon}} icon"></i>
      <br><br>
      {{hint}}
    </div>
    <span class="text muted">
  {{#if helpText}}
    {{helpText}}<br>
  {{/if}}
      (No larger than {{maxSize}})
</span>
  </label>
{{/if}}
{{#if needsCropper}}
  {{modals/cropper-modal isOpen=cropperModalIsShown imgData=imgData onImageCrop=(action 'imageCropped')}}
{{/if}}

