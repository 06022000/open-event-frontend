{{#unless data.event.name}}
  <h2 class="weight-300">{{t 'Create an Event'}}</h2>
{{else}}
  <h2 class="weight-300">{{t 'Creating'}} <span class="weight-500">{{data.event.name}}</span></h2>
{{/unless}}
<div class="ui one column centered stacked grid event wizard">
  <div class="column mobile hidden">
    {{widgets/steps-indicator steps=steps currentStep=1 enableAll=false}}
  </div>
  <div class="column">
    {{forms/wizard/basic-details data=data}}
  </div>
</div>